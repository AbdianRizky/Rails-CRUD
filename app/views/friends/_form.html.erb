<div class="mt-10 sm:mt-0">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Personal Information</h3>
        <% if friend.errors.any? %>
        <h5 class="mt-1 text-sm text-gray-600"><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h5>

        <ul>
          <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
          <% end %>
        </ul>
        <% end %>
      </div>
    </div>
    <div class="mt-5 md:mt-0 md:col-span-2">
      <%= form_with(model: friend) do |form| %>
      <div class="shadow overflow-hidden sm:rounded-md">
        <div class="px-4 py-5 bg-white sm:p-6">
          <div class="col-span-6 py-2">
            <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", autocomplete: "nama" %>
          </div>
          <div class="col-span-6 py-5">
            <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :email, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", autocomplete: "email" %>
          </div>
          <div class="col-span-6 py-5">
            <%= form.label :phone, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :phone, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
          </div>
          <div class="col-span-6 py-5">
            <%= form.label :instagram, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :instagram, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>
        <div class="px-4 py-3 bg-gray-50 flex justify-between sm:px-6">
          <%# form.submit %>
          <a href="<%= root_path %>" class="hover:bg-transparent">
            <button type="button" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gray-500 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              Back
            </button>
          </a>
          <button type="submit" name="commit" value="Create Friend" data-disable-with="Create Friend" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Save
          </button>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>