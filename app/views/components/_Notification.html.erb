<div id="notification" class="my-3 mx-10 bg-indigo-600 rounded-lg">
  <div class="max-w-full mx-auto py-3 px-3 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between flex-wrap">
      <div class="w-0 flex-1 flex items-center">
        <span class="flex p-2 rounded-lg bg-indigo-800">
          <%= render 'components/icons/SpeakerPhone' %>
          <%# render 'components/icons/BellIcon' %>
        </span>
        <p class="ml-3 font-medium text-white truncate">
          <span class="md:hidden">
            <%= notice %>
          </span>
          <span class="hidden md:inline">
            Attention! <%= notice %>
          </span>
        </p>
      </div>
      <div class="order-2 flex-shrink-0 sm:order-3 sm:ml-3">
        <button id="close-notification-btn" class="-mr-1 flex p-2 rounded-md hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-white sm:-mr-2">
          <span class="sr-only">Dismiss</span>
          <!-- Heroicon name: outline/x -->
          <%= render 'components/icons/X' %>
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  var closeNotification = document.getElementById("close-notification-btn");
  var notification = document.getElementById("notification");

  closeNotification.addEventListener("click", (e) => {
    console.log(notification.classList);
    notification.classList.add("hidden");
  });
</script>