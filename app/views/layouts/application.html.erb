<!DOCTYPE html>
<html>

<head>
  <title>Rails CRUD</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'tailwind', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'rails', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <% if user_signed_in? %>
  <%= render 'components/Navbar' %>
  <%= yield :header %>
  <main class="py-10 px-20">
    <% if notice %>
    <%= render 'components/Notification' %>
    <% end %>
    <%= yield :content %>
  </main>
  <%= javascript_include_tag "application" %>
  <% else %>
  <%= yield %>
  <% end %>
</body>

</html>